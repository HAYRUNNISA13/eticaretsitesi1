@model IEnumerable<mvc_project.Models.SupplierOrder>

@{
    ViewData["Title"] = "Tedarik Siparişleri";
}

<h2>Tedarik Siparişleri</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tarih</th>
            <th>Adres</th>
            <th>Durum</th>
            <th>Toplam</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.OrderDate.ToShortDateString()</td>
            <td>@order.Address</td>
            <td>@order.Status</td>
            <td>@order.Items?.Sum(i => i.Price * i.Quantity).ToString("C")</td>

            <td>
                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Detay</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Yeni Sipariş Talebi Oluştur</a>
