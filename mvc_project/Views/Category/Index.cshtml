@model IEnumerable<mvc_project.Models.Category>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="section-title"><i class="bi bi-grid"></i> Kategoriler</h1>
        </div>
        
    </div>
    
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card category-card h-100">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                    }
                    <div class="card-body">
                        <h5 class="card-title text-center mb-3">@item.Name</h5>
                        <p class="card-text small text-muted text-center mb-4">@item.Description</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@item.Id" class="btn btn-primary btn-sm">
                                <i class="bi bi-grid me-2"></i> Ürünleri Gör
                            </a>
                           
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
