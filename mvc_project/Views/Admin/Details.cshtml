@model mvc_project.Models.Order
@{
    ViewData["Title"] = "Sipariş Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="my-4">Sipariş Detayları</h2>

<div class="card mb-4 shadow-sm">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <span><strong>Sipariş No:</strong> @Model.Id</span>
        <span><strong>Tarih:</strong> @Model.OrderDate.ToString("dd.MM.yyyy")</span>
    </div>
    <div class="card-body">
        <p><strong>Kullanıcı:</strong> @Model.User?.UserName (@Model.User?.Email)</p>
        <p><strong>Durum:</strong> @Model.Status.ToString()</p>
        <p><strong>Toplam Tutar:</strong> ₺@Model.Total.ToString("N2")</p>

        <hr />

        <h5 class="mt-3">Ürünler</h5>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Birim Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Product?.Name</td>
                            <td>₺@item.Price.ToString("N2")</td>
                            <td>@item.Quantity</td>
                            <td>₺@(item.Price * item.Quantity).ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
