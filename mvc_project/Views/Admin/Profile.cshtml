@model mvc_project.Models.AppUser

@{
    ViewData["Title"] = "Kullanıcı Profili";
}

<h2>Kullanıcı Profili</h2>

<div class="mb-3">
    <label class="form-label">Kullanıcı Adı</label>
    <input class="form-control" value="@Model.UserName" readonly />
</div>

<div class="mb-3">
    <label class="form-label">E-posta</label>
    <input class="form-control" value="@Model.Email" readonly />
</div>

<div class="mb-3">
    <label class="form-label">Telefon</label>
    <input class="form-control" value="@Model.PhoneNumber" readonly />
</div>

<a class="btn btn-secondary" asp-action="Users">Kullanıcılara Geri Dön</a>
